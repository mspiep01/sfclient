<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<h1><%= "Reporting detail for: #{@crd.Survey_Period__c}" %></h1>
	</div>
</div>

<div class="row">
	<div class="col-xs-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3>Jobs</h3>
			</div>
			<div class="panel-body">
				<%= "Full-Time Employees: #{number_with_precision(@crd.Total_Number_of_Employees__c, precision: 0)}" %><br/>
				<%= "Total Full-Time Payroll: #{number_to_currency(@crd.Total_Company_Payroll__c, precision: 0)}" %>
			</div>
		</div>
	</div>
	<div class="col-xs-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3>Revenue</h3>
			</div>
			<div class="panel-body">
				<%= "Gross Sales Revenue: #{@crd.Gross_Sales_Revenue__c}" %><br/>
				<%= "Licensing Revenue: #{@crd.Licensing_Revenue__c}" %>
			</div>
		</div>
	</div>
</div>

<ul>
	<% if Rails.env.development? %>
	<% @crd.attributes.each do |c| %>
	<%= "#{c}, " %>
	<% end %>
	<% end %>
</ul>